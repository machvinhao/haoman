@model IEnumerable<Ictshop.Models.Hedieuhanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý phân loại</h2>

<p>
    @Html.ActionLink("Thêm mới phân loại", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Phân loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Mahdh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenhdh)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Mahdh }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Mahdh }) |
        @Html.ActionLink("Xóa ", "Delete", new { id = item.Mahdh })
    </td>
</tr>
}

</table>
